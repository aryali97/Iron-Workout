<resources>
    <!-- Base application theme. -->
    <style name="Theme.IronWorkout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button.Wide.ClearBlue" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/accentBlue</item>
        <item name="android:background">@drawable/button_ripple_blue</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    <style name="Button.Wide.ClearRed" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/accentRed</item>
        <item name="android:background">@drawable/button_ripple_red</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>